<div class="container p-4">
    <div class="row">
        {{#each graficas}}
            {{!-- {{this}} --}}
            <div class="col-md-3">
                <div class="card text=center">
                    <div class="card-body">

                        <a href="{{url}}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                        </a>
                        <a href="/graficas/mostrar/{{id}}">Ver grafica</a>
                        <p class="m-2">{{description}}</p>
                        <p>{{timeago created_at}}</p>

                        <a href="/graficas/delete/{{id}}" class="btn btn-danger">Eliminar</a>
                        <a href="/graficas/edit/{{id}}" class="btn btn-secondary">Editar</a>
                    </div>
                </div>
            </div>

        {{else}}
            <div class="com-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay gr√°ficas creadas</p>
                    <a href="/graficas/agregar">Crear una</a>

                </div>
            </div>
        {{/each}}


    </div>
</div>