<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>



<div class="container p-4">
    {{!-- DETALLES GRAFICA --}}
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">

                <div class="card-body">

                    <h3>Vista previa de la gr√°fica</h3>

                    <form action="" method="POST">
                        <div class="form-group">
                            <input name="name" class="form-control" placeholder="name" autofocus
                                value="{{grafica.NOMBRE}}">
                        </div>
                        <br>
                        <div class="form-group">
                            <input name="tipo" class="form-control" placeholder="tipo" autofocus
                                {{!-- value="{{grafica.TIPO_ID}}"> --}}
                                value="{{tipo_nombre}}">
                        </div>
                        <br>
                        <div class="form-group">
                            <textarea name="super_descripcion" id="" rows="2" class="form-control"
                                placeholder="Description">{{grafica.SUPER_DESCRIPCION}}</textarea>
                        </div>
                        <br>
                        <div class="form-group">
                            <textarea name="descripcion" id="" rows="2" class="form-control"
                                placeholder="Description">{{grafica.DESCRIPCION}}</textarea>
                        </div>
                        <br>
                    </form>

                </div>



            </div>
        </div>
        {{!-- CARGAR DATASETS --}}
        <div class="col-md-4 mx-auto">
            <div class="card">

                <div class="card-body">

                    <h3>Elegir Dataset</h3>

                    <form action="/graficas/importar/{{grafica.ID}}" method="post">
                        <p class="m-2">{{datasets.ID}}</p>
                        <div class="form-group">
                        <select name = "id_dataset" class="form-select form-select-sm" aria-label=".form-select-sm example">
                            {{!-- <option selected>Nombre Dataset</option> --}}
                            
                            {{#each datasets}}
                                
                                    <option value="{{ID}}">{{NOMBRE}}</option>

                            {{/each}}
                        </select>

                        </div>

                        <br>

                        <br>
                        <div class="form-group">
                            <button class="btn btn-success col-12">
                                Actualizar
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <br>
            {{!-- PARA EL PLOTEO DE LA GRAFICA --}}
            <div class="card">

                <div class="card-body">

                    <h3>Ploteo</h3>

                    <form action="/graficas/plotear/{{grafica.ID}}" method="post">
                        <br>


                        <div class="form-group">
                            <input name="tipo" class="form-control" placeholder="tipo" autofocus
                                value="{{tipo_nombre}}">
                        </div>
                        <br>

                        {{!-- HIDDENS --}}
                            <input name="dataset_id" class="form-control" 
                                type = "hidden"
                                placeholder="tipo" autofocus
                                value="{{grafica.DATASET_ID}}">

                            <input name="tipo_grafica_id" class="form-control" 
                                type = "hidden"
                                placeholder="tipo" autofocus
                                value="{{grafica.TIPO_ID}}">



                        <div class="form-group">
                            <button class="btn btn-primary col-12">Graficar
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>



    <br>
    <br>
        <div class="row">
            <div class="col-md-6">
                <h2>Grafica Ejemplo</h2>
                <hr>
                <canvas id="chart" width="400" height="400">

                </canvas>

            </div>

        </div>
</div>



<script>
var ctx = document.getElementById('chart').getContext('2d');
